{
  "name": "lodgifywp-theme",
  "version": "1.1.0",
  "description": "LodgifyWP Theme - A modern WordPress theme for property booking",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss/main.scss:assets/css/main.css --style=compressed",
    "build:js": "webpack --mode production",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass assets/scss/main.scss:assets/css/main.css --watch",
    "watch:js": "webpack --mode development --watch",
    "lint": "eslint assets/js/**/*.js",
    "lint:scss": "stylelint assets/scss/**/*.scss"
  },
  "author": "WonkyPixel",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.0",
    "sass": "^1.71.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
} 